<div class="bp3-card bp3-elevation-3 bp3 bitmex .modifier">

    <img src="/src/images/exchanges/bitmex.png" width="5%" />
       
       <div class="main_bitmex">
        
           <h5>MAIN ACCOUNT</h5>
       
           <label for="main_bitmex_apikey">
               Api Key
           </label>
           <input type="text" id="main_bitmex_apikey" class="main_bitmex_apikey"
                  name="settings[bitmex][main][api_key]" value="<%= settings.bitmex.main.api_key %>">
       
           <label for="main_bitmex_apisecret">
               Api Secret
           </label>
           <input type="text" id="main_bitmex_apisecret" class="main_bitmex_apisecret"
                  name="settings[bitmex][main][api_secret]" value="<%= settings.bitmex.main.api_secret %>">
       </div>
       
       <div class="client_bitmex">
       
           <h5>CLIENT ACCOUNTS</h5>
       
        <div class="adder_client_bitmex">
            <% for (var i = 1; i <= bmx_clients; i++) { %>
            <div class="client client_div">
                <input class="client_name" name="settings[bitmex][clients][client1][name]" value="Client <%=i%>"></input>
                <label for="client_bitmex_apikey[client<%=i%>]">
                        Api Key
                </label>
                    <input type="text" id="client_bitmex_apikey[client<%=i%>]" class="client_bitmex_apikey[client<%=i%>]"
                           name="settings[bitmex][clients][client<%=i%>][api_key]" value="<%= settings.bitmex.clients['client' + i].api_key %>">
            
                <label for="client_bitmex_apisecret[client<%=i%>]">
                        Api Secret
                </label>
                    <input type="text" id="client_bitmex_apisecret[client<%=i%>]" class="client_bitmex_apisecret[client<%=i%>]"
                           name="settings[bitmex][clients][client<%=i%>][api_secret]" value="<%= settings.bitmex.clients['client' + i].api_secret %>">
            </div>
            <% } %>
        </div>
       
           <button class="new_client_btn bitmex_new" onclick="return CTX_CLIENT.add_html()">Add new client</button>
       
       </div>

       <button class="update_form" role="button">Save</button>
      
</div>