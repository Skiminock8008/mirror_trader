<div class="bp3-card bp3-elevation-3 bp3 bitmex .modifier">

    <!-- <img src="/src/images/exchanges/bitmex.png" width="5%" /> -->
       
       <div class="main_bitmex">
        
           <h5>MAIN ACCOUNT</h5>
       
           <label for="main_bitmex_apikey">
               Api Key
           </label>
           <input type="text" id="main_bitmex_apikey" class="main_bitmex_apikey"
                  name="settings[bitmex][main][api_key]" value="<%= settings.bitmex.main.api_key %>">
       
           <label for="main_bitmex_apisecret">
               Api Secret
           </label>
           <input type="text" id="main_bitmex_apisecret" class="main_bitmex_apisecret"
                  name="settings[bitmex][main][api_secret]" value="<%= settings.bitmex.main.api_secret %>">
       </div>
       
       <div class="client_bitmex">
       
           <h5>CLIENT ACCOUNTS</h5>
       
        <div class="adder_client_bitmex">
            <% for (let i in settings.bitmex.clients) { %>
              <%  if(settings.bitmex.clients[i].api_key != "" && settings.bitmex.clients[i].api_key != undefined) { %>
                <% let w = i.replace(/\D/g, "") %>
            <div class="client <%=i%>_div">
                <input class="client_name" name="settings[bitmex][clients][<%=i%>][name]" value="Client <%=w%>" />
                <label for="client_bitmex_apikey[<%=i%>]">
                        Api Key
                </label>
                    <input type="text" id="client_bitmex_apikey[<%=i%>]" class="client_bitmex_apikey[<%=i%>]"
                           name="settings[bitmex][clients][<%=i%>][api_key]" value="<%= settings.bitmex.clients[i].api_key %>" />
            
                <label for="client_bitmex_apisecret[<%=i%>]">
                        Api Secret
                </label>
                    <input type="text" id="client_bitmex_apisecret[<%=i%>]" class="client_bitmex_apisecret[<%=i%>]"
                           name="settings[bitmex][clients][<%=i%>][api_secret]" value="<%= settings.bitmex.clients[i].api_secret %>" />
                    
                    <button class="delete_client delete_bitmex[<%=i%>]" type="button" onclick="return CTX_CLIENT.delete_me(this.className)">Delete me</button>
            </div>
            
              <% } %>
            <% } %>
        </div>
       
           <button class="new_client_btn bitmex_new" onclick="return CTX_CLIENT.add_html()">Add new client</button>
       
       </div>

       <button class="update_form" role="button">Save</button>
      
</div>